<UserControl x:Class="Practica_Gara_Auto.WindowsFile.StergeUser"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="340" Width="636">
    <Grid Margin="10" HorizontalAlignment="Center"  VerticalAlignment="Center" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Selectează angajat:" 
                   FontWeight="Bold" 
                   Margin="0,0,0,5" FontSize="18"/>
        <ComboBox x:Name="ComboUser" 
                  Grid.Row="1"
                  Style="{StaticResource RoundedComboBoxStyle}"
                 
                  Width="290"
                  Margin="0,0,0,20"
                  Height="40"
                  HorizontalAlignment="Left"/>
        <Button x:Name="BtnSterge" 
                Grid.Row="2"
                Content="Șterge cont" 
                Width="290" 
                Style="{StaticResource RoundedButtonStyle}"
                
                HorizontalAlignment="Left"
                Click="BtnSterge_Click" Margin="0,0,0,90" Background="#FF2B793E"/>
    </Grid>
</UserControl>